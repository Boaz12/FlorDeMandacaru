<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.restaurante.app.flordemandacaru.Telapedido">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="32dp"
            android:paddingRight="32dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="end"
                android:text="Número da Mesa:"/>

            <EditText
                android:id="@+id/editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:layout_marginTop="1dp">


                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acarajé"
                    android:id="@+id/rb_acaraje"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:onClick="atribuirAcaraje"
                    android:layout_below="@+id/rb_acaraje"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"

                     />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arroz Doce"
                    android:id="@+id/rb_arroz"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:onClick="atribuirArroz"
                    android:layout_below="@+id/rb_arroz"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Baião de Dois"
                    android:id="@+id/rb_baiao"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:onClick="atribuirBaiaoDeDois"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carne de Sol com Queijo Coalho"
                    android:id="@+id/rb_carne"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:onClick="atribuirCarne"
                    android:layout_below="@+id/rb_carne"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Creme de Galinha"
                    android:id="@+id/rb_baba"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:onClick="atribuirBaba"
                    android:layout_below="@+id/rb_baba"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Curau"
                    android:id="@+id/rb_curau"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:onClick="atribuirCurau"
                    android:layout_below="@+id/rb_curau"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />


                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paçoca de Carne Seca"
                    android:id="@+id/rb_pacoca"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:onClick="atribuirPacoca"
                    android:layout_below="@+id/rb_pacoca"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />


                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pamonha"
                    android:id="@+id/rb_pamonha"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:onClick="atribuirPamonha"
                    android:layout_below="@+id/rb_pamonha"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Milho Cozido"
                    android:id="@+id/rb_milho"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:onClick="atribuirMilho"
                    android:layout_below="@+id/rb_milho"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:layout_marginTop="35dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Próxima"
                android:id="@+id/proxima_tela_pedido_botao"/>


        </LinearLayout>

    </LinearLayout>


</ScrollView>
